<resources>

    <style name="AppTheme" parent="Base.AppTheme"/>

    <style name="AppTheme.OverlapSystemBar" parent="Base.AppTheme"/>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BaseTextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="HourTextStyle" parent="BaseTextView">
        <item name="android:textSize">@dimen/f16</item>
    </style>

    <style name="BoldBase" parent="BaseTextView">
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
    </style>


    <style name="ForecastSubItemTextView" parent="BaseTextView">
        <item name="android:color">@color/sub_item_title_text_gray</item>
        <item name="android:textSize">@dimen/f14</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="ForecastHighlightTextView" parent="BaseTextView">
        <item name="android:color">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/f16</item>
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
    </style>


    <style name="SettingsTextView" parent="BaseTextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/f18</item>
    </style>

    <style name="SmallThinTextStyle" parent="BaseTextView">
        <item name="android:fontFamily">@font/roboto_condensed_light</item>
        <item name="android:textSize">@dimen/f16</item>
    </style>

    <style name="PlaceBigTextStyle" parent="BaseTextView">
        <item name="android:fontFamily">@font/roboto_mono_medium</item>
        <item name="android:textSize">@dimen/f24</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PlaceBigDigitStyle" parent="BaseTextView">
        <item name="android:fontFamily">@font/roboto_mono_medium</item>
        <item name="android:textSize">@dimen/f24</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PlaceLightTextStyle" parent="BaseTextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/f16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ItemHourHeaderTextStyle" parent="BaseTextView">
        <item name="android:fontFamily">@font/roboto_mono_medium</item>
        <item name="android:textSize">@dimen/f16</item>
    </style>

    <style name="ItemLightTextStyle" parent="BaseTextView">
        <item name="android:fontFamily">@font/roboto_condensed_light</item>
        <item name="android:textSize">@dimen/f16</item>
    </style>


    <style name="SettingsTitleTextView" parent="BaseTextView">
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
        <item name="android:textSize">@dimen/f20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>


</resources>
